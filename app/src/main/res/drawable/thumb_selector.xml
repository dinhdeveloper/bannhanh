<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:dither="true" android:shape="rectangle" android:useLevel="false" android:visible="true">
            <solid android:color="@color/medium_gray" />
            <corners android:radius="100dp" />
            <size android:width="@dimen/dp20" android:height="@dimen/dp20" />
            <stroke android:width="4dp" android:color="#0000ffff" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:dither="false" android:shape="rectangle" android:useLevel="false" android:visible="true">
            <solid android:color="#FFFFFF" />
            <corners android:radius="100dp" />
            <size android:width="@dimen/dp20" android:height="@dimen/dp20" />
            <stroke android:width="4dp" android:color="#0000ffff" />
        </shape>
    </item>
</selector>