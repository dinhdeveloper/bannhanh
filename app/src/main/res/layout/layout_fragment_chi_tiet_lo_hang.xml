<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hinhnen"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_toolbar_home"
                android:minHeight="?attr/actionBarSize"
                android:paddingRight="8dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageNavLeft"
                            android:padding="@dimen/dp10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_icon_back" />

                        <TextView
                            android:id="@+id/name_product_category_header"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Chi tiết lô hàng"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.Toolbar>

            <LinearLayout
                android:layout_marginTop="@dimen/dp15"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/dp20"
                        android:text="1. Mã lô hàng: "
                        android:textColor="@color/colorAAA"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/malohang"
                    android:textSize="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp20"
                    android:layout_marginVertical="@dimen/dp10"
                    android:background="@color/hinhnen"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/dp10"
                    android:background="@color/colorAAA" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/dp20"
                        android:text="2. Nhà cung ứng "
                        android:textColor="@color/colorAAA"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_nhacungung"
                    android:orientation="horizontal"
                    android:background="@drawable/custom_background_linearlayout"
                    android:layout_marginHorizontal="@dimen/dp20"
                    android:layout_marginVertical="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="14dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:paddingVertical="3dp"
                        android:textColor="@color/black"
                        android:id="@+id/nhacungung"
                        android:layout_marginHorizontal="@dimen/dp10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_sort_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/dp10"
                    android:background="@color/colorAAA" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/dp20"
                        android:text="3. Sản phẩm "
                        android:textColor="@color/colorAAA"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginHorizontal="@dimen/dp20"
                    android:layout_marginVertical="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:background="@drawable/custom_background_linearlayout"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="14dp"
                        android:layout_marginHorizontal="@dimen/dp10"
                        android:paddingVertical="3dp"
                        android:id="@+id/name_product_category"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="@dimen/dp10"
                    android:background="@color/colorAAA" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/dp20"
                        android:text="4. Ngày nhập hàng "
                        android:textColor="@color/colorAAA"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="@dimen/dp20"
                    android:layout_marginVertical="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="14dp"
                        android:id="@+id/ngay_nhap"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/hinhnen"/>

                    <ImageView
                        android:id="@+id/date_ngay_nhap"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_button_calencar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="@dimen/dp10"
                    android:background="@color/colorAAA" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@color/white">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/dp20"
                        android:text="5. Ngày sản xuất "
                        android:textColor="@color/colorAAA"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="@dimen/dp20"
                    android:layout_marginVertical="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="14dp"
                        android:id="@+id/ngay_sx"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/hinhnen"/>

                    <ImageView
                        android:id="@+id/date_ngay_sx"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_button_calencar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="@dimen/dp10"
                    android:background="@color/colorAAA" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/dp20"
                        android:text="6. Hạn sử dụng"
                        android:textColor="@color/colorAAA"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="@dimen/dp20"
                    android:layout_marginVertical="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="14dp"
                        android:id="@+id/han_su_dung"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/hinhnen"/>

                    <ImageView
                        android:id="@+id/date_han_su_dung"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_button_calencar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="@dimen/dp10"
                    android:background="@color/colorAAA" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/dp20"
                        android:text="7. Giá nhập(VNĐ) "
                        android:textColor="@color/colorAAA"
                        android:textStyle="bold" />
                </LinearLayout>

                <EditText
                    android:id="@+id/edtGiaNhap"
                    android:textSize="14dp"
                    android:layout_marginTop="@dimen/dp10"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp20"
                    android:background="@color/hinhnen"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="@dimen/dp10"
                    android:background="@color/colorAAA" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/dp20"
                        android:text="8. Giá bán(VNĐ) "
                        android:textColor="@color/colorAAA"
                        android:textStyle="bold" />
                </LinearLayout>

                <EditText
                    android:id="@+id/gia_ban"
                    android:textSize="14dp"
                    android:layout_marginTop="@dimen/dp10"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp20"
                    android:background="@color/hinhnen"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="@dimen/dp10"
                    android:background="@color/colorAAA" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/dp20"
                        android:text="9. Mô tả lô hàng "
                        android:textColor="@color/colorAAA"
                        android:textStyle="bold" />
                </LinearLayout>

                <EditText
                    android:id="@+id/mota"
                    android:textSize="14dp"
                    android:layout_marginTop="@dimen/dp10"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp20"
                    android:background="@color/hinhnen"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="@dimen/dp10"
                    android:background="@color/colorAAA" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/dp20"
                        android:text="10. Số lượng nhập vào"
                        android:textColor="@color/colorAAA"
                        android:textStyle="bold" />
                </LinearLayout>

                <EditText
                    android:id="@+id/soluong_nhapvao"
                    android:textSize="14dp"
                    android:layout_marginTop="@dimen/dp10"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp20"
                    android:background="@color/hinhnen"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="@dimen/dp10"
                    android:background="@color/colorAAA" />

                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginVertical="@dimen/dp10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="11. Số lượng tồn kho còn lại: "
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor="@color/colorAAA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp20"
                        android:background="@color/hinhnen"/>
                    <TextView
                        android:id="@+id/tonkho"
                        android:textSize="14dp"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:layout_weight="2"
                        android:textColor="@color/dangnhap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp20"
                        android:background="@color/hinhnen"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginVertical="@dimen/dp10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="12. Người tạo đơn: "
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor="@color/colorAAA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp20"
                        android:background="@color/hinhnen"/>
                    <TextView
                        android:id="@+id/nguoi_tao_don"
                        android:textSize="14dp"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:textColor="@color/dangnhap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp20"
                        android:background="@color/hinhnen"/>
                </LinearLayout>
                <!--btn-->
                <LinearLayout
                    android:id="@+id/layout_update"
                    android:layout_marginTop="@dimen/dp20"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp20"
                    android:background="@drawable/custom_background_button_login">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Cập nhật"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_delete"
                    android:visibility="gone"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp20"
                    android:background="@drawable/custom_background_btn_delete">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Trả hàng"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>