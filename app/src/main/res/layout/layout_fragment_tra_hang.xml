<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hinhnen"
    android:orientation="vertical">

    <include layout="@layout/layout_detail_person_level_customer"/>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/layout_detail_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_toolbar_home"
                android:minHeight="?attr/actionBarSize"
                android:paddingRight="8dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageNavLeft"
                            android:padding="@dimen/dp10"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_icon_back" />

                        <TextView
                            android:id="@+id/name_level_customer_header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Tạo đơn trả hàng"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.Toolbar>

            <LinearLayout
                android:layout_marginHorizontal="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorAAA"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:text="1. Ngày nhập hàng: "
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/ngay_nhap"
                    android:layout_weight="1"
                    android:textColor="@color/text"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="@dimen/dp20"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorAAA"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:text="2. Nhà cung ứng: "
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/ma_nha_cung_ung"
                    android:layout_weight="1"
                    android:textColor="@color/text"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="@dimen/dp20"
                android:layout_marginBottom="@dimen/dp10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorAAA"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/nhacungung"
                    android:layout_weight="1"
                    android:textColor="@color/text"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_marginHorizontal="@dimen/dp20"
                    android:textColor="@color/colorAAA"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text="3. Ngày trả hàng:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/dp20"
                android:layout_marginVertical="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14dp"
                    android:id="@+id/ngay_tra"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/hinhnen"/>

                <ImageView
                    android:id="@+id/date_ngay_tra"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_button_calencar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <View
                android:layout_marginBottom="@dimen/dp10"
                android:background="@color/colorAAA"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>


            <LinearLayout
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_marginHorizontal="@dimen/dp20"
                    android:textColor="@color/colorAAA"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text="4. Mã trả hàng:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <EditText
                android:id="@+id/ma_tra_hang"
                android:textSize="14dp"
                android:layout_marginVertical="@dimen/dp10"
                android:layout_marginHorizontal="@dimen/dp20"
                android:background="@color/hinhnen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <View
                android:layout_marginBottom="@dimen/dp10"
                android:background="@color/colorAAA"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_marginHorizontal="@dimen/dp20"
                    android:textColor="@color/colorAAA"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text="5. Số lượng trả hàng: "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <EditText
                android:id="@+id/soluong_tra"
                android:textSize="14dp"
                android:layout_marginVertical="@dimen/dp10"
                android:layout_marginHorizontal="@dimen/dp20"
                android:background="@color/hinhnen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <View
                android:layout_marginBottom="@dimen/dp10"
                android:background="@color/colorAAA"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginVertical="@dimen/dp10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="6. Người tạo đơn: "
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="@color/colorAAA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp20"
                    android:background="@color/hinhnen"/>
                <TextView
                    android:id="@+id/nguoi_tao_don"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:textColor="@color/dangnhap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp20"
                    android:background="@color/hinhnen"/>
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_marginHorizontal="@dimen/dp20"
                    android:textColor="@color/colorAAA"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text="7. Lý do trả hàng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <EditText
                android:id="@+id/lydo_tra"
                android:textSize="14dp"
                android:layout_marginVertical="@dimen/dp10"
                android:layout_marginHorizontal="@dimen/dp20"
                android:background="@color/hinhnen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <View
                android:layout_marginBottom="@dimen/dp10"
                android:background="@color/colorAAA"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>


            <!--btn-->
            <LinearLayout
                android:id="@+id/layout_create"
                android:layout_marginTop="@dimen/dp20"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_background_button_login">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Tạo mới"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_cancel"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/dp20"
                android:background="@drawable/custom_background_btn_delete">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Hủy"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>