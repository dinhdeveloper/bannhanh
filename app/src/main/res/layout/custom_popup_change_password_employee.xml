<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_background_change_password_employee"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_close"
        android:layout_margin="@dimen/dp15"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_delete_noti"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <LinearLayout
        android:layout_below="@+id/image_close"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/dp20"
                android:text="Cập nhật mật khẩu"
                android:textStyle="bold"
                android:textColor="@color/colorAAA"
                android:layout_marginVertical="@dimen/dp10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginHorizontal="70dp"
                android:text="Nhập mật khẩu mới của bạn bên dưới. Mật khẩu gồm ít nhất 6 ký tự"
                android:textSize="@dimen/dp15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <!--edittext-->
        <LinearLayout
            android:layout_marginVertical="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_marginHorizontal="@dimen/dp20"
                    android:textColor="@color/colorAAA"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text="1. Mật khẩu mới "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dp15"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/new_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:background="@color/hinhnen"
                    android:textSize="@dimen/dp15" />

            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_marginBottom="@dimen/dp10"
                android:background="@color/colorAAA"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_marginHorizontal="@dimen/dp20"
                    android:textColor="@color/colorAAA"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text="2. Nhập lại mật khẩu mới"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dp15"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/re_new_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:background="@color/hinhnen"
                    android:textSize="@dimen/dp15" />

            </android.support.design.widget.TextInputLayout>


            <View
                android:layout_marginBottom="@dimen/dp10"
                android:background="@color/colorAAA"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_update"
            android:background="@drawable/custom_background_button_login"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="40dp">
            <TextView
                android:textSize="14dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Cập nhật"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>