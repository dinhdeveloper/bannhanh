<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/hinhnen"
    android:id="@+id/fragmentProduct"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_background_toolbar_product"
        android:minHeight="?attr/actionBarSize"
        android:paddingRight="12dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageNavLeft"
                    android:layout_gravity="center"
                    android:padding="@dimen/dp10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_icon_back" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Cưỡng chế đăng xuất"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingHorizontal="@dimen/dp20"
                android:layout_marginVertical="@dimen/dp20"
                android:background="#4FFFFFFF"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <TextView
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="Quản lý cưỡng chế đăng xuất"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/kkkk"
                    android:src="@drawable/ic_icon_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_force" />

        <TextView
            android:layout_marginVertical="@dimen/dp20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Bạn có muốn cưỡng chế đăng xuất ?"
            android:textColor="@color/black"
            android:textSize="@dimen/dp20"
            android:textStyle="bold" />

        <LinearLayout
            android:weightSum="2"
            android:layout_marginVertical="@dimen/dp20"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">

            <b.laixuantam.myaarlibrary.widgets.roundview.RoundTextView
                android:id="@+id/btnExitEmployee"
                android:layout_weight="1"
                app:rv_cornerRadius="@dimen/dp10"
                android:text="Thoát quản lý"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:rv_backgroundColor="@color/colorBBB"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="@dimen/dp10"/>

            <b.laixuantam.myaarlibrary.widgets.roundview.RoundTextView
                android:id="@+id/btnExitCustomer"
                android:layout_weight="1"
                app:rv_cornerRadius="@dimen/dp10"
                android:text="Thoát nhân viên"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:rv_backgroundColor="@color/colorBBB"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="@dimen/dp10"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>