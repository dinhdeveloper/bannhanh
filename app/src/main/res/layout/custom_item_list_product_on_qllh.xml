<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/dp5"
    android:background="@drawable/border_shape_white_layout_search_contact"
    android:layout_marginHorizontal="@dimen/dp20"
    android:id="@+id/layout_item"
    android:layout_marginVertical="@dimen/dp10"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/dp10"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/dp10"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorAAA"
                android:textStyle="bold"
                android:textSize="14dp"
                android:text="Ngày nhập: "
                android:layout_weight="1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/date_create"
                android:textColor="@color/colorBBB"
                android:maxLines="1"
                android:textSize="14dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/dangnhap"
                android:textStyle="bold"
                android:textSize="14dp"
                android:text="Hạn sử dụng: "
                android:layout_weight="1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/date_end"
                android:textColor="@color/colorBBB"
                android:maxLines="1"
                android:textSize="14dp"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14dp"
                android:text="Giá bán: "
                android:layout_weight="1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/price_sale"
                android:textColor="@color/text"
                android:maxLines="1"
                android:textSize="14dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14dp"
                android:text="Giá mua: "
                android:layout_weight="1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/price_buy"
                android:textColor="@color/colorYellow"
                android:maxLines="1"
                android:textSize="14dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_marginRight="@dimen/dp20"
        android:layout_gravity="center"
        android:src="@drawable/ic_icon_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>