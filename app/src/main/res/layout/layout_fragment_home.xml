<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/hinhnen"
    android:id="@+id/fragmentHome"
    android:orientation="vertical">

        <include layout="@layout/layout_header_detail"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginHorizontal="@dimen/dp20"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvStore_end"
                    android:textSize="16sp"
                    android:textColor="#FF6D4C"
                    android:textStyle="bold"
                    android:paddingVertical="@dimen/dp10"
                    android:gravity="center"
                    android:layout_gravity="center"
                    tools:text="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:id="@+id/layoutQLSP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dp10"
                    android:background="@drawable/custom_background_item_home"
                    android:orientation="horizontal"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="18dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_icon_quanlysanpham" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp20"
                        android:layout_weight="1"
                        android:text="Quản lý sản phẩm"
                        android:textColor="@color/dangnhap"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_icon_next" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutQLKH"
                    android:layout_marginVertical="@dimen/dp10"
                    android:orientation="horizontal"
                    android:background="@drawable/custom_background_item_home"
                    android:paddingVertical="18dp"
                    android:paddingHorizontal="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_icon_quanlykhachhang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginHorizontal="@dimen/dp20"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:text="Quản lý khách hàng"
                        android:textStyle="bold"
                        android:textColor="@color/dangnhap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_icon_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutQLDH"
                    android:layout_marginVertical="@dimen/dp10"
                    android:orientation="horizontal"
                    android:background="@drawable/custom_background_item_home"
                    android:paddingVertical="18dp"
                    android:paddingHorizontal="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_icon_quanlydonhang" />

                    <TextView
                        android:layout_marginHorizontal="@dimen/dp20"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:text="Quản lý đơn hàng"
                        android:textStyle="bold"
                        android:textColor="@color/dangnhap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_icon_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layoutQLNV"
                    android:layout_marginVertical="@dimen/dp10"
                    android:orientation="horizontal"
                    android:background="@drawable/custom_background_item_home"
                    android:paddingVertical="18dp"
                    android:paddingHorizontal="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_icon_quanlynhanvien"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginHorizontal="@dimen/dp20"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:text="Quản lý nhân viên"
                        android:textStyle="bold"
                        android:textColor="@color/dangnhap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_icon_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layoutQLCDKH"
                    android:layout_marginVertical="@dimen/dp10"
                    android:orientation="horizontal"
                    android:background="@drawable/custom_background_item_home"
                    android:paddingVertical="18dp"
                    android:paddingHorizontal="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_icon_quanlycapdokhachhang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginHorizontal="@dimen/dp20"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:text="Quản lý cấp độ khách hàng"
                        android:textStyle="bold"
                        android:textColor="@color/dangnhap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_icon_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layoutQLTK"
                    android:layout_marginVertical="@dimen/dp10"
                    android:orientation="horizontal"
                    android:background="@drawable/custom_background_item_home"
                    android:paddingVertical="18dp"
                    android:paddingHorizontal="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_icon_quanlythongke"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginHorizontal="@dimen/dp20"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:text="Quản lý thống kê - báo cáo"
                        android:textStyle="bold"
                        android:textColor="@color/dangnhap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_icon_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layoutQLNCU"
                    android:layout_marginVertical="@dimen/dp10"
                    android:orientation="horizontal"
                    android:background="@drawable/custom_background_item_home"
                    android:paddingVertical="18dp"
                    android:paddingHorizontal="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_icon_quanlynhacungung"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginHorizontal="@dimen/dp20"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:text="Quản lý nhà cung ứng"
                        android:textStyle="bold"
                        android:textColor="@color/dangnhap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_icon_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutCCDX"
                    android:layout_marginVertical="@dimen/dp10"
                    android:orientation="horizontal"
                    android:background="@drawable/custom_background_item_home"
                    android:paddingVertical="18dp"
                    android:paddingHorizontal="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_force_sign_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginHorizontal="@dimen/dp20"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:text="Cưỡng chế đăng xuất"
                        android:textStyle="bold"
                        android:textColor="@color/dangnhap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_icon_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>


</LinearLayout>
