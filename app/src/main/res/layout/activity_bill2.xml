<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_phone_main"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layou1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_icon_adnroid" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_icon_login_2" />
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/layou2"
        android:layout_below="@+id/layou1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="40dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp5"
            android:background="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_centerInParent="true"
        android:layout_below="@+id/layou2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtLoginIdShop"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/dp10"
            android:layout_marginVertical="@dimen/dp10"
            android:background="@drawable/custom_edittext_background_login_admin"
            android:gravity="start|center"
            android:hint="Mã cửa hàng"
            android:inputType="text"
            android:paddingHorizontal="@dimen/dp10"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/edtLoginName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/dp10"
            android:layout_marginVertical="@dimen/dp10"
            android:background="@drawable/custom_edittext_background_login_admin"
            android:gravity="start|center"
            android:hint="Đăng nhập"
            android:inputType="text"
            android:paddingHorizontal="@dimen/dp10"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/edtLoginPassowrd"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/dp10"
            android:layout_marginVertical="@dimen/dp10"
            android:background="@drawable/custom_edittext_background_login_admin"
            android:gravity="start|center"
            android:hint="Mật khẩu"
            android:inputType="text"
            android:paddingHorizontal="@dimen/dp10"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />
    </LinearLayout>

    <b.laixuantam.myaarlibrary.widgets.roundview.RoundTextView
        android:id="@+id/btnLoginButton"
        android:layout_below="@+id/layout3"
        android:layout_marginTop="90dp"
        android:layout_marginHorizontal="60dp"
        app:rv_cornerRadius="5dp"
        android:text="Đăng nhập"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/dp20"
        app:rv_backgroundColor="@color/button_login_2"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp10"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingHorizontal="3sp"
            android:gravity="end"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:paddingVertical="@dimen/dp5"
            android:text="Bạn muốn trải nghiệm ứng dụng?"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvReview"
            android:gravity="start"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:paddingVertical="@dimen/dp5"
            android:text="Trải nghiệm"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>