<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="220dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_marginVertical="@dimen/dp10"
    android:layout_marginHorizontal="@dimen/dp5"
    android:elevation="@dimen/dp5"
    android:background="@drawable/border_shape_white_layout_search_contact"
    android:id="@+id/layout_item"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_product"
        android:layout_width="match_parent"
        android:layout_height="120dp"/>

    <TextView
        android:id="@+id/name_product"
        tools:text="Ao thun nam"
        android:layout_marginHorizontal="@dimen/dp5"
        android:maxLines="1"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="@color/colorAAA"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/dp5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="2"
            android:textStyle="bold"
            android:text="Mã SP: "
            android:textColor="@color/dangnhap"
            android:textSize="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/id_product"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:maxLines="1"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:textSize="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <b.laixuantam.myaarlibrary.widgets.roundview.RoundTextView
        android:id="@+id/btnDisable"
        app:rv_backgroundColor="@color/colorBBB"
        android:layout_margin="@dimen/dp10"
        android:text="Phục hồi"
        android:textSize="16sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:rv_cornerRadius="@dimen/dp5"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

</LinearLayout>